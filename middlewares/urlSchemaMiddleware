import joi from "joi";

const urlSchema = joi.object({
  shortUrl: joi.string().required(),
  url: joi.string().required(),
  sessionId: joi.number().required(),
});

export const urlSchemaValidation = async (req, res, next) => {
  const token = req.token;
  let session = {}
  try {
    session = (
      await connectionDB.query(`SELECT * FROM sessions WHERE token=$1`, [token])
    ).rows[0];
    const toValidate = { ...req.body, ...session };
    console.log(toValidate)
    const validation = urlSchema.validate(toValidate, { abortEarly: false });
    if (validation.error) {
      const errors = validation.error.details.map((detail) => detail.message);
      res.status(422).send(errors);
      return;
    }
  } catch (error) {
    console.log(error);
    res.sendStatus(500);
  }
  req.sessionId = session.id
  next();
};
